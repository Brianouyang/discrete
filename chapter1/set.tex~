\begin{Example}
  $\{1,2\} \cup \{2,3\} = \{1,2,3\}$
\end{Example}


\begin{Exercise}
设$A$，$B$，$C$是集合，证明$(A\bigtriangleup B)\bigtriangleup C =
A\bigtriangleup (B\bigtriangleup C)$。
\end{Exercise}

\begin{Exercise}
设$A$，$B$，$C$，$D$是任意四个集合，证明$(A\cap B) \times (C \cap D) = (A
\times C)
\cap (B \times D)$。
\end{Exercise}

