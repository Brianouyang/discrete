\documentclass{article}
\usepackage{tikz}
\usepackage{CJKutf8}
\usepackage{amsmath}
\usepackage{amsthm}
\begin{document}
\begin{CJK}{UTF8}{gbsn}
  \newtheorem*{Thm}{定理}
  \huge
\begin{Thm}[欧拉公式]
    如果有$p$个顶点$q$条边的平面连通图$G$有$f$个面，则
      \[p - q + f = 2\]
\end{Thm}

\end{CJK}
\end{document}


